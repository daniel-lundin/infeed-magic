body
  font-family Arial, sans-serif

h2
  font-size 28px

.article-container
  background-color blue
  margin-top 10px
  padding 20px
  position relative
  box-sizing border-box
  color white

  &.ad
    background-color red
    border 2px dashed yellow


.ad-label
  position absolute
  top -5px
  left 0
  font-size 5px
  line-height 5px
  color black

.article-preamble
  font-weight bold
  margin 10px 0

